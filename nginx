
user www-data;
worker_processes  auto;

error_log  /var/log/nginx/error.log notice;
pid        /var/run/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    keepalive_timeout  65;

    # ========== 文件上传大小限制（全局配置）==========
    client_max_body_size 20M;
    client_body_buffer_size 128k;

	gzip  on;
    gzip_min_length 2k;
    gzip_buffers 4 32k;
	gzip_comp_level 5;
    gzip_types text/plain application/x-javascript text/css application/xml text/javascript application/x-httpd-php application/javascript application/json;
	
    include /etc/nginx/conf.d/*.conf;








	server {
        listen       8111;
        server_name  localhost;

        location / {
            root   /web/quotation/dist;
            try_files $uri $uri/ @router;
            index  index.html index.htm;
        }
        
        location @router {
            rewrite ^.*$ /index.html last;
        }

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }

    }
		server {
        listen       80;
        server_name  www.jinlai.fun;

        location / {
            root   /web/jinlai/dist;
            try_files $uri $uri/ @router;
            index  index.html index.htm;
        }
        
        location @router {
            rewrite ^.*$ /index.html last;
        }

        error_page   500 502 503 504  /50x.html;
    
    # ========== 后端 API（重要！）==========
    location /api {
		if ($request_method = 'OPTIONS') {  
            add_header Access-Control-Allow-Origin 'http://www.jinlai.fun';  
            add_header Access-Control-Allow-Headers 'authorization';  
            return 204;  
        }  
        if ($request_method != 'OPTIONS') {  
            add_header Access-Control-Allow-Origin 'http://www.jinlai.fun' always;  
        }  
        proxy_pass http://localhost:5000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_cache_bypass $http_upgrade;
        
        # 文件上传大小限制（重要！）
        client_max_body_size 20M;
        client_body_buffer_size 128k;
    }
    
    # ========== 图片访问（重要！）==========
    location /uploads {
        proxy_pass http://localhost:5000/uploads;
        proxy_set_header Host $host;
        
        # 文件上传大小限制
        client_max_body_size 20M;
    }

    }
	
		server {
        listen       9000;
        server_name  localhost;

        location / {
            root   /web/excelAnalyzer/dist;
            try_files $uri $uri/ @router;
            index  index.html index.htm;
        }
        
        location @router {
            rewrite ^.*$ /index.html last;
        }

        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }

    }
    # 宠物婚恋网站 - 端口 8080
server {
    listen       8080;
    server_name  localhost;

    location / {
        root   /web/pet-love/dist;
        try_files $uri $uri/ @router;
        index  index.html index.htm;
    }
    
    location @router {
        rewrite ^.*$ /index.html last;
    }
    
    location /api {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_cache_bypass $http_upgrade;
        client_max_body_size 20M;
    }
    
    location /uploads {
        alias /web/pet-love/server/uploads;
        expires 30d;
        client_max_body_size 20M;
    }

    error_page   500 502 503 504  /50x.html;
}

}
